---
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const projects: CollectionEntry<'projects'>[] = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<Layout title={`${project.data.title} - Portfolio`} description={project.data.description}>
  <article class="bg-stone-50 min-h-screen">
    <!-- Back Link -->
    <div class="max-w-6xl mx-auto px-6 pt-32 pb-8">
      <a 
        href="/#projekte" 
        class="inline-flex items-center gap-2 text-stone-500 hover:text-orange-600 mb-8 transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Projects
      </a>
    </div>

    <!-- Hero Header -->
    <div class="max-w-6xl mx-auto px-6 pb-12">
      <header class="mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-stone-800 mb-6 leading-tight">
          {project.data.title}
        </h1>
        <p class="text-xl text-stone-500 leading-relaxed max-w-3xl">
          {project.data.description}
        </p>
        {project.data.image && (
          <div class="mt-8">
            <img 
              src={project.data.image} 
              alt={project.data.title}
              class="w-full rounded-2xl shadow-sm object-cover"
            />
          </div>
        )}
      </header>
    </div>

    <!-- Main Content Grid -->
    <div class="max-w-6xl mx-auto px-6 pb-20">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-16">
        <!-- Main Content (2/3 width on desktop) -->
        <div class="lg:col-span-2">
          <div class="prose prose-lg prose-stone max-w-none">
            <Content />
          </div>
        </div>

        <!-- Sticky Sidebar (1/3 width on desktop) -->
        <aside class="lg:col-span-1">
          <div class="lg:sticky lg:top-32">
            <div class="bg-white rounded-xl shadow-sm p-6">
              <!-- Date -->
              <div class="mb-6 pb-6 border-b border-stone-100">
                <h3 class="text-xs font-bold text-stone-400 uppercase tracking-wider mb-2">
                  Date
                </h3>
                <time datetime={project.data.date} class="text-stone-800">
                  {new Date(project.data.date).toLocaleDateString('de-DE', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </div>

              <!-- Technologies -->
              {project.data.tags && project.data.tags.length > 0 && (
                <div class="mb-6 pb-6 border-b border-stone-100">
                  <h3 class="text-xs font-bold text-stone-400 uppercase tracking-wider mb-3">
                    Technologies
                  </h3>
                  <div class="flex flex-wrap gap-2">
                    {project.data.tags.map((tag: string) => (
                      <span class="bg-orange-50 text-orange-700 text-sm px-2 py-1 rounded-md">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
              )}

              <!-- Additional metadata can be added here -->
            </div>
          </div>
        </aside>
      </div>
    </div>
  </article>
</Layout>

<style>
  /* Prose Base Overrides */
  :global(.prose) {
    @apply text-stone-600;
  }

  /* Headings */
  :global(.prose h2) {
    @apply text-stone-800 font-bold mt-12 mb-6 text-2xl;
  }

  :global(.prose h3) {
    @apply text-stone-800 font-bold mt-8 mb-4 text-xl;
  }

  :global(.prose h4) {
    @apply text-stone-800 font-bold mt-6 mb-3;
  }

  /* Paragraphs */
  :global(.prose p) {
    @apply mb-6 leading-relaxed text-stone-600;
  }

  /* Links */
  :global(.prose a) {
    @apply text-orange-600 hover:text-orange-700 underline decoration-orange-300 hover:decoration-orange-500 transition-colors;
  }

  /* Blockquotes - Key Insights Style */
  :global(.prose blockquote) {
    @apply border-l-4 border-orange-300 bg-orange-50/50 pl-6 pr-4 py-4 my-6 text-stone-700 rounded-r-lg;
  }

  :global(.prose blockquote p) {
    @apply mb-0;
  }

  :global(.prose blockquote p:first-child::before) {
    content: '';
  }

  :global(.prose blockquote p:last-child::after) {
    content: '';
  }

  /* Lists */
  :global(.prose ul),
  :global(.prose ol) {
    @apply mb-6 ml-6;
  }

  :global(.prose ul) {
    @apply list-disc;
  }

  :global(.prose ol) {
    @apply list-decimal;
  }

  :global(.prose li) {
    @apply mb-3 text-stone-600;
  }

  :global(.prose ul li::marker),
  :global(.prose ol li::marker) {
    @apply text-orange-400;
  }

  /* Code */
  :global(.prose code) {
    @apply bg-stone-100 text-stone-800 px-2 py-1 rounded text-sm font-mono;
  }

  :global(.prose pre) {
    @apply bg-white border border-stone-200 shadow-sm rounded-xl p-4 overflow-x-auto my-6;
  }

  :global(.prose pre code) {
    @apply bg-transparent p-0;
  }

  /* Strong */
  :global(.prose strong) {
    @apply text-stone-800 font-bold;
  }

  /* Images */
  :global(.prose img) {
    @apply rounded-xl shadow-sm my-8;
  }

  /* Horizontal Rules */
  :global(.prose hr) {
    @apply border-stone-200 my-8;
  }
</style>
