---
import Layout from '../../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const projects: CollectionEntry<'projects'>[] = await getCollection('projects');
  const sortedProjects = projects.sort((a, b) => 
    new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
  );
  
  return sortedProjects.map((project, index) => ({
    params: { slug: project.slug },
    props: { 
      project,
      prevProject: sortedProjects[index + 1] || null,
      nextProject: sortedProjects[index - 1] || null,
    },
  }));
}

interface Props {
  project: CollectionEntry<'projects'>;
  prevProject: CollectionEntry<'projects'> | null;
  nextProject: CollectionEntry<'projects'> | null;
}

const { project, prevProject, nextProject } = Astro.props;
const { Content, headings } = await project.render();

// Calculate reading time (~200 words per minute)
const content = await project.body;
const words = content?.split(/\s+/).length || 0;
const readingTime = Math.max(1, Math.ceil(words / 200));

// Filter headings for TOC (h2 and h3 only)
const tocHeadings = headings.filter(h => h.depth === 2 || h.depth === 3);
---

<Layout title={`${project.data.title} - Portfolio`} description={project.data.description}>
  <!-- Scroll Progress Indicator -->
  <div id="progress-bar" class="fixed top-[65px] left-0 h-0.5 bg-gradient-to-r from-orange-500 to-orange-400 z-40 transition-all duration-75" style="width: 0%"></div>
  
  <article class="bg-stone-50 min-h-screen">
    <!-- Back Link -->
    <div class="max-w-6xl mx-auto px-6 pt-32 pb-8">
      <a 
        href="/#projects" 
        class="inline-flex items-center gap-2 text-stone-500 hover:text-orange-600 mb-8 transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Projects
      </a>
    </div>

    <!-- Hero Header -->
    <div class="max-w-6xl mx-auto px-6 pb-12">
      <header class="mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-stone-800 mb-6 leading-tight">
          {project.data.title}
        </h1>
        <p class="text-xl text-stone-500 leading-relaxed max-w-3xl">
          {project.data.description}
        </p>
        {project.data.image && (
          <div class="mt-8">
            <img 
              src={project.data.image} 
              alt={project.data.title}
              class="w-full rounded-2xl shadow-sm object-cover"
            />
          </div>
        )}
      </header>
    </div>

    <!-- Main Content Grid -->
    <div class="max-w-6xl mx-auto px-6 pb-12">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 lg:gap-16">
        <!-- Main Content (2/3 width on desktop) -->
        <div class="lg:col-span-2">
          <div class="prose prose-lg prose-stone max-w-none">
            <Content />
          </div>
        </div>

        <!-- Sticky Sidebar (1/3 width on desktop) -->
        <aside class="lg:col-span-1">
          <div class="lg:sticky lg:top-32">
            <div class="bg-white rounded-xl shadow-sm p-6">
              <!-- Reading Time & Date -->
              <div class="mb-6 pb-6 border-b border-stone-100">
                <div class="flex items-center gap-4 text-sm text-stone-600 mb-3">
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    ~{readingTime} min read
                  </span>
                </div>
                <h3 class="text-xs font-bold text-stone-400 uppercase tracking-wider mb-2">
                  Date
                </h3>
                <time datetime={project.data.date} class="text-stone-800">
                  {new Date(project.data.date).toLocaleDateString('de-DE', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              </div>

              <!-- Technologies -->
              {project.data.tags && project.data.tags.length > 0 && (
                <div class="mb-6 pb-6 border-b border-stone-100">
                  <h3 class="text-xs font-bold text-stone-400 uppercase tracking-wider mb-3">
                    Technologies
                  </h3>
                  <div class="flex flex-wrap gap-2">
                    {project.data.tags.map((tag: string) => (
                      <span class="bg-orange-50 text-orange-700 text-sm px-2 py-1 rounded-md">
                        {tag}
                      </span>
                    ))}
                  </div>
                </div>
              )}

              <!-- External Links -->
              {(project.data.github || project.data.demo) && (
                <div class="mb-6 pb-6 border-b border-stone-100">
                  <h3 class="text-xs font-bold text-stone-400 uppercase tracking-wider mb-3">
                    Links
                  </h3>
                  <div class="flex flex-col gap-2">
                    {project.data.github && (
                      <a 
                        href={project.data.github} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-2 text-sm text-stone-600 hover:text-orange-600 transition-colors"
                      >
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                        GitHub Repository
                      </a>
                    )}
                    {project.data.demo && (
                      <a 
                        href={project.data.demo} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-2 text-sm text-stone-600 hover:text-orange-600 transition-colors"
                      >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                        </svg>
                        Live Demo
                      </a>
                    )}
                  </div>
                </div>
              )}

              <!-- Table of Contents -->
              {tocHeadings.length > 0 && (
                <div>
                  <h3 class="text-xs font-bold text-stone-400 uppercase tracking-wider mb-3">
                    Contents
                  </h3>
                  <nav class="space-y-2">
                    {tocHeadings.map((heading) => (
                      <a 
                        href={`#${heading.slug}`}
                        class={`block text-sm text-stone-600 hover:text-orange-600 transition-colors ${heading.depth === 3 ? 'pl-3' : ''}`}
                      >
                        {heading.text}
                      </a>
                    ))}
                  </nav>
                </div>
              )}
            </div>
          </div>
        </aside>
      </div>
    </div>
    
    <!-- Prev/Next Navigation -->
    {(prevProject || nextProject) && (
      <nav class="max-w-6xl mx-auto px-6 pb-20">
        <div class="border-t border-stone-200 pt-8">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {prevProject && (
              <a 
                href={`/projects/${prevProject.slug}`}
                class="group flex flex-col p-4 rounded-xl border border-stone-200 hover:border-orange-300 hover:bg-orange-50/50 transition-all"
              >
                <span class="text-xs text-stone-400 uppercase tracking-wider mb-1">Previous</span>
                <span class="text-stone-800 group-hover:text-orange-600 transition-colors font-medium">
                  {prevProject.data.title}
                </span>
              </a>
            )}
            {nextProject && (
              <a 
                href={`/projects/${nextProject.slug}`}
                class={`group flex flex-col p-4 rounded-xl border border-stone-200 hover:border-orange-300 hover:bg-orange-50/50 transition-all text-right ${!prevProject ? 'md:col-start-2' : ''}`}
              >
                <span class="text-xs text-stone-400 uppercase tracking-wider mb-1">Next</span>
                <span class="text-stone-800 group-hover:text-orange-600 transition-colors font-medium">
                  {nextProject.data.title}
                </span>
              </a>
            )}
          </div>
        </div>
      </nav>
    )}
  </article>
</Layout>

<script>
  // Scroll Progress Indicator
  const progressBar = document.getElementById('progress-bar');
  
  function updateProgress() {
    const scrollTop = window.scrollY;
    const docHeight = document.documentElement.scrollHeight - window.innerHeight;
    const progress = docHeight > 0 ? (scrollTop / docHeight) * 100 : 0;
    if (progressBar) {
      progressBar.style.width = `${Math.min(100, progress)}%`;
    }
  }
  
  window.addEventListener('scroll', updateProgress);
  updateProgress();
</script>

<style>
  /* Prose Base Overrides */
  :global(.prose) {
    @apply text-stone-600;
  }

  /* Headings */
  :global(.prose h2) {
    @apply text-stone-800 font-bold mt-12 mb-6 text-2xl;
  }

  :global(.prose h3) {
    @apply text-stone-800 font-bold mt-8 mb-4 text-xl;
  }

  :global(.prose h4) {
    @apply text-stone-800 font-bold mt-6 mb-3;
  }

  /* Paragraphs */
  :global(.prose p) {
    @apply mb-6 leading-relaxed text-stone-600;
  }

  /* Links */
  :global(.prose a) {
    @apply text-orange-600 hover:text-orange-700 underline decoration-orange-300 hover:decoration-orange-500 transition-colors;
  }

  /* Blockquotes - Key Insights Style */
  :global(.prose blockquote) {
    @apply border-l-4 border-orange-300 bg-orange-50/50 pl-6 pr-4 py-4 my-6 text-stone-700 rounded-r-lg;
  }

  :global(.prose blockquote p) {
    @apply mb-0;
  }

  :global(.prose blockquote p:first-child::before) {
    content: '';
  }

  :global(.prose blockquote p:last-child::after) {
    content: '';
  }

  /* Lists */
  :global(.prose ul),
  :global(.prose ol) {
    @apply mb-6 ml-6;
  }

  :global(.prose ul) {
    @apply list-disc;
  }

  :global(.prose ol) {
    @apply list-decimal;
  }

  :global(.prose li) {
    @apply mb-3 text-stone-600;
  }

  :global(.prose ul li::marker),
  :global(.prose ol li::marker) {
    @apply text-orange-400;
  }

  /* Code */
  :global(.prose code) {
    @apply bg-stone-100 text-stone-800 px-2 py-1 rounded text-sm font-mono;
  }

  :global(.prose pre) {
    @apply bg-white border border-stone-200 shadow-sm rounded-xl p-4 overflow-x-auto my-6;
  }

  :global(.prose pre code) {
    @apply bg-transparent p-0;
  }

  /* Strong */
  :global(.prose strong) {
    @apply text-stone-800 font-bold;
  }

  /* Images */
  :global(.prose img) {
    @apply rounded-xl shadow-sm my-8;
  }

  /* Horizontal Rules */
  :global(.prose hr) {
    @apply border-stone-200 my-8;
  }
</style>
