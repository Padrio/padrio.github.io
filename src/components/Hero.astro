---
import { Icon } from 'astro-icon/components';

// Kernkompetenzen - prominent dargestellt
const coreStack = [
  { name: 'PHP', icon: 'simple-icons:php' },
  { name: 'Laminas', icon: 'simple-icons:zend' },
  { name: 'Docker', icon: 'simple-icons:docker' },
  { name: 'Linux', icon: 'simple-icons:linux' },
];

// Sekund√§re Skills - dezenter
const secondaryStack = [
  { name: 'Laravel', icon: 'simple-icons:laravel' },
  { name: 'MySQL', icon: 'simple-icons:mysql' },
  { name: 'Git', icon: 'simple-icons:git' },
  { name: 'Nginx', icon: 'simple-icons:nginx' },
  { name: 'Kubernetes', icon: 'simple-icons:kubernetes' },
  { name: 'React', icon: 'simple-icons:react' },
  { name: 'Jenkins', icon: 'simple-icons:jenkins' },
];
---

<section class="min-h-screen flex items-center justify-center px-4 sm:px-6 pt-20 relative overflow-x-hidden">
  <div class="max-w-4xl mx-auto text-center w-full">
    <!-- Profile Image with Simple Pastel Border -->
    <div class="mb-8 flex justify-center animate-entrance">
      <div class="relative">
        <div class="rounded-full border-4 border-orange-200 p-1">
          <img 
            src="/images/profile.jpg" 
            alt="Pascal Krason"
            class="w-48 h-48 rounded-full object-cover bg-stone-100"
            onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
          />
          <div class="w-48 h-48 rounded-full bg-stone-100 flex items-center justify-center text-6xl font-bold text-stone-400" style="display: none;">
            PK
          </div>
        </div>
      </div>
    </div>
    
    <!-- Headline -->
    <h1 class="text-4xl sm:text-5xl md:text-7xl font-bold mb-4 tracking-tight text-stone-800 animate-entrance animate-entrance-delay-1 px-4 break-words">
      Pascal Krason
    </h1>
    
    <!-- Subline -->
    <p class="text-lg sm:text-xl md:text-2xl text-stone-600 mb-8 max-w-2xl mx-auto px-4 animate-entrance animate-entrance-delay-2 break-words">
      Backend Developer & DevOps Engineer
    </p>
    
    <!-- Social Icons -->
    <div class="flex items-center justify-center gap-6 mb-12 animate-entrance animate-entrance-delay-3">
      <a 
        href="https://github.com/Padrio" 
        target="_blank" 
        rel="noopener noreferrer"
        class="glass-card p-3 hover:bg-orange-50 transition-colors group"
        aria-label="GitHub"
      >
        <Icon name="simple-icons:github" class="w-6 h-6 text-stone-600 group-hover:text-orange-600 transition-colors" />
      </a>
            
      <a 
        href="https://www.linkedin.com/in/pascal-krason-b74028326/" 
        target="_blank" 
        rel="noopener noreferrer"
        class="glass-card p-3 hover:bg-orange-50 transition-colors group"
        aria-label="LinkedIn"
      >
        <Icon name="simple-icons:linkedin" class="w-6 h-6 text-stone-600 group-hover:text-orange-600 transition-colors" />
      </a>
    </div>
    
    <!-- Tech Stack -->
    <div class="animate-entrance animate-entrance-delay-4 px-4">
      <p class="text-xs text-stone-500 uppercase tracking-widest mb-6">Tech Stack</p>
      
      <!-- Core Stack - Prominent -->
      <div class="flex items-center justify-center gap-6 sm:gap-8 mb-4">
        {coreStack.map((tech) => (
          <div 
            class="flex flex-col items-center gap-2 group cursor-default"
            title={tech.name}
          >
            <div class="w-10 h-10 sm:w-12 sm:h-12 text-stone-700 group-hover:text-orange-600 transition-colors">
              <Icon name={tech.icon} class="w-full h-full" />
            </div>
            <span class="text-xs text-stone-500 group-hover:text-stone-700 transition-colors hidden sm:block">
              {tech.name}
            </span>
          </div>
        ))}
      </div>
      
      <!-- Secondary Stack - Subtle -->
      <div class="flex items-center justify-center gap-4 sm:gap-6 opacity-50 hover:opacity-70 transition-opacity">
        {secondaryStack.map((tech) => (
          <div 
            class="w-5 h-5 sm:w-6 sm:h-6 text-stone-400"
            title={tech.name}
          >
            <Icon name={tech.icon} class="w-full h-full" />
          </div>
        ))}
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-entrance animate-bounce" style="animation-delay: 1s;">
      <a href="#career" class="flex flex-col items-center gap-2 text-stone-400 hover:text-stone-600 transition-colors">
        <span class="text-xs uppercase tracking-widest">Scroll</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </a>
    </div>
  </div>
</section>
