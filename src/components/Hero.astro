---
import { Icon } from 'astro-icon/components';

const techStack = [
  { name: 'PHP', icon: 'simple-icons:php' },
  { name: 'Linux', icon: 'simple-icons:linux' },
  { name: 'Docker', icon: 'simple-icons:docker' },
  { name: 'Git', icon: 'simple-icons:git' },
  { name: 'MySQL', icon: 'simple-icons:mysql' },
  { name: 'Nginx', icon: 'simple-icons:nginx' },
];
---

<section class="min-h-screen flex items-center justify-center px-6 pt-20 relative">
  <div class="max-w-4xl mx-auto text-center">
    <!-- Profile Image with Simple Pastel Border -->
    <div class="mb-8 flex justify-center animate-entrance">
      <div class="relative">
        <div class="rounded-full border-4 border-orange-200 p-1">
          <img 
            src="/images/profile.jpg" 
            alt="Pascal Krason"
            class="w-48 h-48 rounded-full object-cover bg-stone-100"
            onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
          />
          <div class="w-48 h-48 rounded-full bg-stone-100 flex items-center justify-center text-6xl font-bold text-stone-400" style="display: none;">
            PK
          </div>
        </div>
      </div>
    </div>
    
    <!-- Headline with Subtle Accent Underline -->
    <h1 class="text-5xl md:text-7xl font-bold mb-4 tracking-tight text-stone-800 animate-entrance animate-entrance-delay-1 underline decoration-orange-300 decoration-2 underline-offset-4">
      Pascal Krason
    </h1>
    
    <!-- Subline -->
    <p class="text-xl md:text-2xl text-stone-600 mb-8 max-w-2xl mx-auto animate-entrance animate-entrance-delay-2">
      Proficient Systems Administrator and PHP Backend Developer
    </p>
    
    <!-- Social Icons -->
    <div class="flex items-center justify-center gap-6 mb-12 animate-entrance animate-entrance-delay-3">
      <a 
        href="https://github.com/Padrio" 
        target="_blank" 
        rel="noopener noreferrer"
        class="glass-card p-3 hover:bg-orange-50 transition-colors group"
        aria-label="GitHub"
      >
        <Icon name="simple-icons:github" class="w-6 h-6 text-stone-600 group-hover:text-orange-600 transition-colors" />
      </a>
            
      <a 
        href="https://www.linkedin.com/in/pascal-krason-b74028326/" 
        target="_blank" 
        rel="noopener noreferrer"
        class="glass-card p-3 hover:bg-orange-50 transition-colors group"
        aria-label="LinkedIn"
      >
        <Icon name="simple-icons:linkedin" class="w-6 h-6 text-stone-600 group-hover:text-orange-600 transition-colors" />
      </a>
    </div>
    
    <!-- Tech Stack Marquee -->
    <div class="animate-entrance animate-entrance-delay-4">
      <p class="text-xs text-stone-500 uppercase tracking-widest mb-4">Tech Stack</p>
      <div class="marquee-container max-w-xl mx-auto py-4">
        <div class="marquee-content">
          <!-- First set of icons -->
          <div class="flex items-center gap-8">
            {techStack.map((tech) => (
              <div class="tech-icon flex items-center justify-center" title={tech.name}>
                <Icon name={tech.icon} class="w-full h-full" />
              </div>
            ))}
          </div>
          <!-- Duplicate set for seamless loop -->
          <div class="flex items-center gap-8">
            {techStack.map((tech) => (
              <div class="tech-icon flex items-center justify-center" title={tech.name}>
                <Icon name={tech.icon} class="w-full h-full" />
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
